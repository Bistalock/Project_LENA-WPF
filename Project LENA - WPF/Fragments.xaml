<Window x:Class="Project_LENA___WPF.Fragments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Fragment From Images" Height="650" Width="1064" MinWidth="700" MinHeight="400">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="512" VerticalAlignment="Top" Width="512" Margin="10,36,0,0" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
            <Canvas x:Name="Canvas1" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="512" VerticalAlignment="Top" Width="512" Margin="523,36,0,0" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}">
            <Canvas x:Name="Canvas2" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100"/>
        </Grid>
        <Label x:Name="label1" Content="Clean__Image.tif:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <Label x:Name="label2" Content="Noisy__Image.tif:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="523,10,0,0"/>

    </Grid>
</Window>
